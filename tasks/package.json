{
  "name": "tasks",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "lint-staged": {
    "*.{tsx,ts}": [
      "npm --prefix tasks run format:fix --staged-files",
      "npm --prefix tasks run ci:format --staged-files",
      "npm --prefix tasks run lint"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --cache . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint --cache . --ext ts,tsx --report-unused-disable-directives --fix",
    "preview": "vite preview",
    "format:fix": "npx prettier . --cache --write src/**/*.*",
    "ci:format": "prettier . --check",
    "prepare": "cd .. && husky tasks/.husky",
    "test": "vitest run --coverage"
  },
  "dependencies": {
    "@reduxjs/toolkit": "https://pkg.csb.dev/reduxjs/redux-toolkit/commit/beb818cb/@reduxjs/toolkit",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.24.1",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.2.5",
    "@testing-library/dom": "^10.3.1",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/node": "22.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.0.2",
    "c8": "^10.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-compiler": "^0.0.0-experimental-0998c1e-20240625",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "sass": "^1.77.6",
    "typescript": "^5.2.2",
    "vite": "^5.3.1",
    "vitest": "^2.0.2"
  }
}
